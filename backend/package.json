{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "prebuild": "echo Skipping prebuild steps",
    "build": "npx prisma generate && npx tsc --project tsconfig-render.json",
    "postbuild": "mkdir -p dist/node_modules/.prisma && cp -r node_modules/.prisma/client dist/node_modules/.prisma/ && mkdir -p dist/node_modules/@prisma/client/runtime && cp node_modules/@prisma/client/libquery_engine-* dist/node_modules/@prisma/client/runtime/ 2>/dev/null || true",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.30",
    "prisma": "^6.6.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
